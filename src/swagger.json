{
  "openapi": "3.0.0",
  "info": {
    "title": "VUTTR Documentation",
    "description": "This is an API VUTTR",
    "version": "1.0.0",
    "contact": {
      "email": "dev@rdlsc.com"
    }
  },
  "paths": {
    "/tools/{id}":{
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "description": "ID of tool that we want to find",
          "type": "integer"
        }
      ],
      "delete": {
        "tags": ["Tool"],
        "sumary": "Delete a tool by id",
        "description": "Delete a tool by id",
        "responses": {
          "204": {
            "description": "No content",
            "content": {
            }
          }
        }
      }
    },
    "/tools": {
      "post": {
        "tags": ["Tool"],
        "sumary": "Create a tool",
        "description": "Create a new tool",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string"
                  },
                  "link": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  },
                  "tags": {
                    "type": "string"
                  }
                },
                "example": {
                  "title": "hotel",
                    "link": "https://github.com/typicode/hotel",
                    "description": "Local app manager. Start apps within your browser, developer tool with local .localhost domain and https out of the box.",
                    "tags":["node", "organizing", "webapps", "domain", "developer", "https", "proxy"]
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          }
        }
      },
      "get": {
        "parameters": [
          {
            "name": "tag",
            "in": "query",
            "required": false,
            "description": "Tag of tool that we want to find",
            "type": "string"
          }
        ],
        "tags": ["Tool"],
        "sumary": "List all tools",
        "description": "List all tools",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "title": {
                        "type": "string"
                      },
                      "link": {
                        "type": "string"
                      },
                      "description": {
                        "type": "string"
                      },
                      "tags": {
                        "type": "array"
                      }
                    }
                  },
                  "example": {
                    "title": "Tool title sample",
                    "link": "www.toolexample.com",
                    "description": "Tool description sample",
                    "tags": ["Tool","sample"]
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
